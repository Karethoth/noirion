# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# Visit editorconfig.org for more information

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Code files (JavaScript, JSX, JSON, GraphQL)
[*.{js,jsx,json,graphql,gql}]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 2

# Make files
[Makefile]
indent_style = tab

# Package files (no trimming)
[{package.json,package-lock.json,yarn.lock}]
indent_style = space
indent_size = 2
