{
  "name": "noirion-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon --legacy-watch index.js",
    "test": "vitest",
    "migrate": "node scripts/run-migrations.js",
    "schema:generate": "node scripts/generate-schema.js",
    "schema:check": "graphql-inspector diff schema.graphql 'src/graphql/schemas/schema.js' --require esm"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "exifr": "^7.1.3",
    "express": "^5.1.0",
    "graphql": "^16.7.0",
    "graphql-tag": "^2.12.6",
    "graphql-type-json": "^0.3.2",
    "graphql-upload-minimal": "^1.6.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.11.0",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@graphql-inspector/cli": "^5.0.8",
    "@graphql-tools/schema": "^10.0.25",
    "nodemon": "^3.0.1",
    "vitest": "^1.0.0"
  }
}
