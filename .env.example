# Noirion - Environment Configuration
# Copy this file to .env and update with your values

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_USER=noirion
POSTGRES_PASSWORD=secret
POSTGRES_DB=noirion
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ==========================================
# Backend Configuration
# ==========================================
# Server configuration
PORT=4000
NODE_ENV=development

# ==========================================
# Frontend Configuration
# ==========================================
# API endpoint
VITE_API_URL=http://localhost:4000

# File upload settings
VITE_MAX_FILE_SIZE=52428800  # 50MB in bytes

# ==========================================
# Development Settings
# ==========================================
# Hot reload configuration
CHOKIDAR_USEPOLLING=true
CHOKIDAR_INTERVAL=500
FAST_REFRESH=true

# Backend debugging (optional)
# Set to 1/true to enable verbose logs for diagnosing stuck GraphQL requests.
DEBUG_GRAPHQL=false
DEBUG_HTTP=false
DB_DEBUG=false

# ==========================================
# Security Notes
# ==========================================
# 1. NEVER commit the .env file to version control
# 2. Use strong passwords in production
# 3. Change default passwords before deploying
# 4. Consider using secrets management in production
